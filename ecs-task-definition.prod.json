{
  "family": "shared-notes-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::502236492999:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::502236492999:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "migration",
      "image": "502236492999.dkr.ecr.eu-central-1.amazonaws.com/shared-notes-api:latest",
      "essential": false,
      "command": ["alembic", "upgrade", "head"],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:eu-central-1:502236492999:secret:shared-notes/database-url"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/shared-notes-api",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "migration"
        }
      }
    },
    {
      "name": "shared-notes-api",
      "image": "502236492999.dkr.ecr.eu-central-1.amazonaws.com/shared-notes-api:latest",
      "dependsOn": [
        {
          "containerName": "migration",
          "condition": "SUCCESS"
        }
      ],
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "DEBUG",
          "value": "false"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:eu-central-1:502236492999:secret:shared-notes/database-url"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "arn:aws:secretsmanager:eu-central-1:502236492999:secret:shared-notes/redis-url"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:eu-central-1:502236492999:secret:shared-notes/secret-key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/shared-notes-api",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:8000/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
